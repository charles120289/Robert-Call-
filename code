def create_file():
    score_file = 'score_file.txt'
    high_score = 'high_score.txt'
    #print('already exist')
    try:
        fhand = open(score_file)
        fhand2 = open(high_score)
    except:
        print('file didnt exist')
        fhand = open(score_file, 'w')
        print('file didnt exist')
        fhand2 = open(high_score, 'w')
        return

def choice_output(x,y):
    if x == y:
        points = 0
        print('tie')
        print(points)
    elif x == 'rock':
         if y == 'paper':
            print('computer wins a point')
            comp_points = 1
            print(comp_points)
         else:
            print('player wins a point')
            player_points = 1
            print(player_points)
    elif x == 'paper':
        if y == 'scissor':
            print('computer wins a point')
            comp_points = 1
            print(comp_points)
        else:
            print('player wins a point')
            player_points = 1
            print(player_points)
    elif x == 'scissor':
        if y == 'rock':
            print('computer wins a point')
            comp_points = 1
            print(comp_points)
        else:
            print('player wins a point')
            player_points = 1
            print(player_points)
    else:
        print('invalid choice')
        return

#main program
import random
score = 'score_file.txt'
